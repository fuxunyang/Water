    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_local"
        style="@style/list_style"
        android:text="大王庄" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/list_style"
        android:text="2015.01.09" />

    <TextView
        android:id="@+id/tv_well"
        style="@style/list_style"
        android:text="30" />

    <TextView
        android:id="@+id/tv_water_use"
        style="@style/list_style"
        android:text="30"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_spend"
        style="@style/list_style"
        android:text="100"
        android:visibility="gone" />
</LinearLayout>