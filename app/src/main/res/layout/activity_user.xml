<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/register"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/register"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_16"
                android:layout_marginTop="@dimen/margin_16"
                android:background="@mipmap/ic_logo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_32"
            android:layout_marginLeft="@dimen/margin_32"
            android:layout_marginRight="@dimen/margin_32"
            android:layout_marginTop="@dimen/margin_4"
            android:background="@drawable/back_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_16"
            android:paddingRight="@dimen/padding_16">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_8"
                android:gravity="center"
                android:padding="@dimen/padding_4"
                android:text="用户信息"
                android:textColor="@color/white"
                android:textSize="@dimen/medium" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_16"
                android:orientation="horizontal">

                <TextView
                    style="@style/register_text_style"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:text="@string/register_realname" />

                <TextView
                    android:id="@+id/et_real"
                    style="@style/user_style" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    style="@style/register_text_style"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:text="@string/register_name" />

                <TextView
                    android:id="@+id/et_account"
                    style="@style/user_style"
                    android:inputType="textPhonetic" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    style="@style/register_text_style"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:text="@string/register_xiangzhen" />

                <TextView
                    android:id="@+id/et_xiangzhen"
                    style="@style/user_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    style="@style/register_text_style"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:text="@string/register_cunzhuang" />

                <TextView
                    android:id="@+id/et_cunzhuang"
                    style="@style/user_style" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:orientation="horizontal">

                <TextView
                    style="@style/register_text_style"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/margin_16"
                    android:text="@string/register_phone" />

                <TextView
                    android:id="@+id/et_phone"
                    style="@style/user_style"
                    android:inputType="number" />

            </LinearLayout>

            <com.sky.water.ui.widget.MyRecycleView
                android:id="@id/recycle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_recycle"
                android:padding="@dimen/padding_4" />

            <Button
                android:id="@+id/bt_Cancellation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/margin_32"
                android:layout_marginTop="@dimen/margin_8"
                android:background="@mipmap/bt_regist"
                android:text="@string/Cancellation"
                android:textColor="@color/white" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>