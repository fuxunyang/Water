<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/lightgray">

    <EditText
        android:id="@+id/et_card"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgbt_search"
        android:layout_alignTop="@id/imgbt_search"
        android:layout_centerInParent="true"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center"
        android:hint="请输入卡号"
        android:textSize="@dimen/medium" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgbt_search"
        android:layout_alignTop="@id/imgbt_search"
        android:layout_toLeftOf="@id/et_card"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingRight="@dimen/padding_4"
        android:text="卡号"
        android:textSize="@dimen/medium" />

    <ImageButton
        android:id="@id/imgbt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/et_card"
        android:background="@color/black"
        android:src="@mipmap/ic_search_category_default" />


</RelativeLayout>